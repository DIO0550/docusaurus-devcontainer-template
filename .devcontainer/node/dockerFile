FROM ubuntu:24.04

# ===== Node.js バージョン（ここで指定）=====
ARG NODE_VERSION=20

# 実行時にも参照したい場合
ENV NODE_VERSION=${NODE_VERSION}
ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update \
 && apt-get install -y \
    curl \
    ca-certificates \
    gnupg \
 && curl -fsSL https://deb.nodesource.com/setup_${NODE_VERSION}.x | bash - \
 && apt-get install -y nodejs \
 && rm -rf /var/lib/apt/lists/*


